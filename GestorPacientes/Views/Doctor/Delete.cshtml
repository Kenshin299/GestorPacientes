@model GestorPacientes.Core.Application.ViewModels.Doctor.SaveDoctorViewModel

<div class="d-flex flex-column justify-content-center align-items-center pt-3">
    <h2>Delete Medical Professional</h2>

    <p>Are you sure you want to delete this medical professional?</p>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Accept</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
